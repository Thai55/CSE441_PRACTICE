<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#1ea296"
        android:fontFamily="sans-serif-medium"
        android:text="Xử lý kết quả"
        android:textSize="24dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận A: "
                android:textColor="#e92366"
                android:textSize="16dp" />

            <View
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/edtAA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </TableRow>


        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận B: "
                android:textColor="#e92366"
                android:textSize="16dp" />

            <View
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/edtBB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </TableRow>




    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnsendtong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả về tổng"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="#6725f4"

            />
        <Button
            android:id="@+id/btnsendhieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả về Hiệu"
            android:layout_gravity="center_horizontal"
            style="@style/Widget.MaterialComponents.Button"
            android:backgroundTint="#6725f4"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>




</LinearLayout>